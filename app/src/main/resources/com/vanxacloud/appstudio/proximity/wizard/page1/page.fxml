<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            styleClass="bg-f5f5f5"
            fx:controller="com.vanxacloud.appstudio.proximity.wizard.page.controller.WizardPageController">

    <fx:define>
        <ToggleGroup fx:id="group"/>
    </fx:define>

    <top>
        <Label styleClass="p-20" alignment="BASELINE_LEFT">Welcome to Proximity. Use the options below to create or open a project</Label>
    </top>

    <center>
        <VBox>
            <RadioButton toggleGroup="$group">Temporary project in memory</RadioButton>
            <Separator styleClass="p-10-0-10-0"/>
            <HBox styleClass="sp-50">
                <RadioButton toggleGroup="$group" onAction="#setDefaultNewProject">New project on disk</RadioButton>
                <VBox styleClass="sp-5" HBox.hgrow="ALWAYS">
                    <HBox styleClass="sp-5">
                        <Label minWidth="50" text="Name:" labelFor="$projectName" alignment="CENTER_RIGHT"/>
                        <TextField fx:id="projectName" HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <HBox styleClass="sp-5">
                        <Label text="File:" minWidth="50" labelFor="$projectFilePath" alignment="CENTER_RIGHT"/>
                        <TextField fx:id="projectFilePath" HBox.hgrow="ALWAYS"/>
                        <Button id="newProjectButton" text="Choose File" onAction="#handleOpenFile"/>
                    </HBox>
                </VBox>
            </HBox>
            <Separator styleClass="p-10-0-10-0"/>
            <HBox styleClass="sp-50">
                <RadioButton toggleGroup="$group" onAction="#setDefaultNewProject">Open existing project</RadioButton>
                <VBox HBox.hgrow="ALWAYS">
                    <HBox styleClass="sp-5">
                        <Label text="File:" minWidth="40" labelFor="$projectFilePath" alignment="CENTER_RIGHT"/>
                        <TextField fx:id="existingProjectFilePath" HBox.hgrow="ALWAYS"/>
                        <Button id="openProjectButton" text="Choose File" onAction="#handleOpenFile"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>


    </center>


